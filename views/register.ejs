<%- include('partials/header', { title: 'Register', user: user }) %>

<div class="min-vh-100 bg-black d-flex align-items-center justify-content-center py-5">
  <div class="col-lg-4 col-md-6">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="background-color: rgb(57,57,57);">
      <div class="card-header text-center" style="background-color: #ffb84d; color: #000;">
        <h4 class="fw-semibold mb-0"><i class="fas fa-user-plus me-2"></i> Register</h4>
      </div>
      <div class="card-body">

        <% if (error) { %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>

        <form action="/auth/register" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label text-light">Username</label>
            <input
              type="text"
              class="form-control custom-input"
              name="username"
              id="username"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label text-light">Email</label>
            <input
              type="email"
              class="form-control custom-input"
              name="email"
              id="email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label text-light">Password</label>
            <input
              type="password"
              class="form-control custom-input"
              name="password"
              id="password"
              required
            />
          </div>
          <button type="submit" class="btn-register w-100">
            <i class="fas fa-user-plus"></i> Register
          </button>
        </form>

        <div class="mt-3 text-center">
          <p class="text-light">Already have an account? <a href="/auth/login" class="link-gold">Login</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .custom-input {
    background-color: rgb(70,70,70);
    border: 1px solid #444;
    color: #fff;
  }
  .custom-input:focus {
    border-color: #ffb84d;
    box-shadow: 0 0 5px #ffb84d;
    background-color: rgb(80,80,80);
    color: #fff;
  }

  .btn-register {
    border: 2px solid #ffb84d;
    border-radius: 6px;
    padding: 10px 15px;
    background-color: #000;
    color: #ffb84d;
    font-weight: 600;
    transition: 0.3s;
  }
  .btn-register:hover {
    background-color: #ffb84d;
    color: #000;
  }

  .link-gold {
    color: #ffb84d;
    font-weight: 600;
    text-decoration: none;
  }
  .link-gold:hover {
    text-decoration: underline;
    color: #ffc966;
  }
</style>

<%- include('partials/footer') %>
