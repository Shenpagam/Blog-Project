<%- include('partials/header', { title: 'Edit Profile', user: user }) %>

<div
  class="min-vh-100 bg-black d-flex align-items-center justify-content-center py-5"
>
  <div
    class="card shadow-lg border-0 rounded-4"
    style="max-width: 650px; width: 100%; border-radius: 10px"
  >
    <!-- Card Header -->
    <div
      class="card-header rounded-top-4"
      style="background-color: #ffb84d; color: #000"
    >
      <h3 class="mb-0 fw-semibold text-center">
        <i class="fas fa-user-edit me-2"></i> Edit Profile
      </h3>
    </div>

    <!-- Card Body -->
    <div
      class="card-body p-4 border-0"
      style="background-color: rgb(57, 57, 57); border-radius: 0 0 10px 10px"
    >
      <% if (error) { %>
      <div class="alert alert-danger rounded-3"><%= error %></div>
      <% } %> <% if (success) { %>
      <div class="alert alert-success rounded-3"><%= success %></div>
      <% } %>

      <form
        action="/user/edit"
        method="POST"
        enctype="multipart/form-data"
        onsubmit="return validateForm()"
      >
        <!-- Username -->
        <div class="mb-3">
          <label
            for="username"
            class="form-label"
            style="color: #ffb84d; font-weight: 500; font-size: 20px"
            >Username</label
          >
          <input
            type="text"
            class="form-control"
            name="username"
            id="username"
            value="<%= user.username %>"
            required
            style="background-color: #ffb84d; border: 0; color: black"
          />
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label
            for="email"
            class="form-label"
            style="color: #ffb84d; font-weight: 500; font-size: 20px"
            >Email</label
          >
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            value="<%= user.email %>"
            required
            style="background-color: #ffb84d; border: 0; color: black"
          />
        </div>

        <!-- Bio -->
        <div class="mb-3">
          <label
            for="bio"
            class="form-label"
            style="color: #ffb84d; font-weight: 500; font-size: 20px"
            >Bio</label
          >
          <textarea
            class="form-control rounded-3"
            name="bio"
            id="bio"
            rows="3"
            style="background-color: #ffb84d; border: 0; color: black"
            placeholder="Write something about yourself..."
          >
<%= user.bio %></textarea
          >
        </div>

        <!-- Profile Picture -->
        <div class="mb-3">
          <label
            for="profilePicture"
            class="form-label"
            style="color: #ffb84d; font-weight: 500; font-size: 20px"
            >Profile Picture</label
          >

          <div class="file-upload">
            <input
              type="file"
              name="profilePicture"
              id="profilePicture"
              onchange="previewImage()"
            />
            <label for="profilePicture" class="file-upload-label"
              >Choose File</label
            >
            <span id="file-chosen">No file chosen</span>
          </div>

          <div class="mt-3 d-flex gap-3 align-items-start">
            <% if (user.profilePicture && user.profilePicture.url) { %>
            <img
              src="<%= user.profilePicture.url %>"
              alt="Profile Picture"
              class="rounded-3 border"
              id="currentProfilePicture"
              style="max-width: 120px"
            />
            <% } %>
            <img
              id="image-preview"
              class="rounded-3 border"
              style="max-width: 120px; display: none"
            />
          </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
          <button type="submit" class="btn-editprofile shadow-sm">
            <i class="fas fa-save me-2"></i>Update Profile
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  // Preview Profile Picture
  function previewImage() {
    const preview = document.getElementById("image-preview");
    const file = document.getElementById("profilePicture").files[0];
    const currentImage = document.getElementById("currentProfilePicture");
    const fileChosen = document.getElementById("file-chosen");

    if (file) {
      preview.src = URL.createObjectURL(file);
      preview.style.display = "block";
      fileChosen.textContent = file.name;
      if (currentImage) {
        currentImage.style.display = "none";
      }
    } else {
      preview.style.display = "none";
      fileChosen.textContent = "No file chosen";
      if (currentImage) {
        currentImage.style.display = "block";
      }
    }
  }

  // Form Validation
  function validateForm() {
    const username = document.getElementById("username").value;
    const email = document.getElementById("email").value;
    if (!username || !email) {
      alert("Username and Email are required.");
      return false;
    }
    return true;
  }
</script>

<style>
  .btn-editprofile {
    border: 2px solid #ffb84d;
    border-radius: 5px;
    padding: 6px 15px;
    background-color: #000;
    color: #ffb84d;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  .btn-editprofile:hover {
    background-color: #ffb84d;
    color: rgb(255, 255, 255);
  }
  form input {
    border-radius: 5px;
  }

  /* Custom file upload */
  .file-upload input[type="file"] {
    display: none;
  }
  .file-upload-label {
    display: inline-block;
    padding: 8px 16px;

    font-weight: 600;
    border-radius: 6px;
    cursor: pointer;
    transition: 0.3s;

    background-color: #000000;
    color: #ffb84d;
    border: 1px solid #ffb84d;
  }
  .file-upload-label:hover {
    border: 1px solid #ffb84d;
    background-color: #ffb84d;
    color: #000;
  }
  #file-chosen {
    margin-left: 10px;
    font-size: 14px;
    color: #ffb84d;
  }
</style>

<%- include('partials/footer') %>
